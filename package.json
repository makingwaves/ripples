{
  "name": "<%= conf.get('themeDir') %>",
  "themeName": "<% print(conf.get('themeDir').replace(/-/g, ' ').replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();})); %>",
  "functionPrefix": "<% print(conf.get('themeDir').replace(/-/g, '')); %>",
  "classPrefix": "<% print(conf.get('themeDir').replace(/-/g, ' ').replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();}).replace(/\s/g, '')); %>",
  "constantPrefix": "<% print(conf.get('themeDir').replace(/-/g, '').toUpperCase()); %>",
  "version": "1.0.0",
  "description": "Making Waves WordPress starter theme intended to use with YeoPress, Grunt and Bower.",
  "keywords": [
    "wordpress", "grunt", "starter-theme", "making-waves"
  ],
  "author": {
    "name": "Peder Nielsen",
    "email": "peder.nielsen@makingwaves.no",
    "url": "http://www.makingwaves.no"
  },
  "homepage": "http://<%= conf.get('themeDir') %>.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/makingwaves/<%= conf.get('themeDir') %>.git"
  },
  "bugs": {
    "url" : "https://github.com/makingwaves/<%= conf.get('themeDir') %>/issues"
  },
  "license": {
    "type": "MIT",
    "name": "The MIT License (MIT)",
    "url": "http://opensource.org/licenses/MIT"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "devDependencies": {
    "grunt": "~0.4.5",
    "grunt-contrib-sass": "~0.9.0",
    "grunt-contrib-jshint": "~0.11.0",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-bower-requirejs": "~1.1.1",
    "grunt-contrib-requirejs": "~0.4.4",
    "grunt-contrib-imagemin": "~0.9.3",
    "grunt-banner": "~0.3.1",
    "grunt-text-replace": "~0.4.0",
    "grunt-svgmin": "~2.0.0",
    "grunt-remove": "~0.1.0",
    "bower": "~1.3.12"

  }
}
